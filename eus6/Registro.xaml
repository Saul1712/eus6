<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eus6.Registro" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
           
            <Label Text="Registro usuarios" HorizontalTextAlignment="Center" FontSize="20"/>

            <Entry x:Name="txtCodigo" Placeholder="Ingrese el codigo"/>
            <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"/>
            <Entry x:Name="txtApellido" Placeholder="Ingrese el apellido"/>
            <Entry x:Name="txtEdad" Placeholder="Ingrese la edad" Keyboard="Numeric"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Text="Insertar" x:Name="btnIngresar" Clicked="btnIngresar_Clicked" Grid.Column="0" CornerRadius="15" BackgroundColor="Black" TextColor="White"/>

                <Button Grid.Row="0" Text="Regresar" x:Name="btnRegresar" Clicked="btnRegresar_Clicked" Grid.Column="1" CornerRadius="15" BackgroundColor="Black" TextColor="White">
                </Button>
            </Grid>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>