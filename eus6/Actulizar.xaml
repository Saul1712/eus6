<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eus6.Actulizar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Actualizar y Eliminar usuarios" HorizontalTextAlignment="Center" FontSize="20" />
            <Entry x:Name="txtCodigo" Placeholder="Ingrese el codigo"/>
            <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"/>
            <Entry x:Name="txtApellido" Placeholder="Ingrese el apellido"/>
            <Entry x:Name="txtEdad" Placeholder="Ingrese la edad" Keyboard="Numeric"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Text="Actulizar" x:Name="btnActualizar" Clicked="btnActualizar_Clicked" Grid.Column="0" CornerRadius="15" BackgroundColor="Black" TextColor="White">
                </Button>
                <Button Grid.Row="0" Text="Eliminar" x:Name="btnEliminar" Clicked="btnEliminar_Clicked" Grid.Column="1" CornerRadius="15" BackgroundColor="Black" TextColor="White">
                </Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>